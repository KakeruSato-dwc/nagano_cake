<div class="container">
  <div class="row">
    <div class="col-4 mt-3">
      <h2 class="bg-light text-center">新規会員登録</h2>
    </div>
  </div>
  
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <div class="row">
      <div class="col-4">
        <p>名前</p>
      </div>
      <div class="col-1">
        <p>(性)</p>
      </div>
      <div class="col-3">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "w-100"; %>
      </div>
      <div class="col-1">
        <p>(名)</p>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name, autocomplete: "first_name", class: "w-100"; %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-4">
        <p>フリガナ</p>
      </div>
      <div class="col-1">
        <p>(セイ)</p>
      </div>
      <div class="col-3">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "w-100"; %>
      </div>
      <div class="col-1">
        <p>(メイ)</p>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "w-100"; %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-4">
        <p>メールアドレス</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.email_field :email, autocomplete: "email", class: "w-100"; %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-4">
        <p>郵便番号(ハイフンなし)</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.text_field :postal_code, autocomplete: "postal_code", class: "w-100"; %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-4">
        <p>住所</p>
      </div>
      <div class="col-1"></div>
      <div class="col-7">
        <%= f.text_field :address, autocomplete: "address", class: "w-100"; %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-4">
        <p>電話番号(ハイフンなし)</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "w-100"; %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-4">
        <p>パスワード(6文字以上)</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.password_field :password, autocomplete: "new-password", class: "w-100"; %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-4">
        <p>パスワード(確認用)</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100"; %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-5"></div>
      <div class="col-3 action">
        <%= f.submit "新規登録", class: "btn btn-success"; %>
      </div>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-4 mt-4">
      <h2 class="bg-light text-center">既に登録済みの方</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-5 mt-3 text-center">
      <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>
    </div>
  </div>
  
</div>

