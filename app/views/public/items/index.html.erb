<div class="container">
  <div class="row">
    <div class="col-4 my-4">
      <span class="h2 text-center">商品一覧</span><span>(全<%= @items.count %>件)</span>
    </div>
  </div>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3 p-2">
        <%= link_to(item_path(item.id)) do %>
          <%= image_tag item.image, width: "99%", height: "66%" %>
        <% end %>
        <div class="mt-2"><%= item.name %></div>
        <div class="my-2">¥<%= (item.price).to_s(:delimited) %></div>
      </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>
