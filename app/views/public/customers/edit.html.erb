<div class="container">
  <div class="row">
    <div class="col-4 mt-3">
      <h2 class="bg-light text-center">会員情報編集</h2>
      <% if @customer.errors.any? %>
        <h4><%= @customer.errors.count %>件のエラーが発生しました</h4>
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_information_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-4">
        <p>名前</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "w-100"; %>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.text_field :first_name, autocomplete: "first_name", class: "w-100"; %>
      </div>
    </div>

    <div class="row">
      <div class="col-4">
        <p>フリガナ</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "w-100"; %>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "w-100"; %>
      </div>
    </div>

    <div class="row">
      <div class="col-4">
        <p>郵便番号(ハイフンなし)</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.text_field :postal_code, autocomplete: "postal_code", class: "w-100"; %>
      </div>
    </div>

    <div class="row">
      <div class="col-4">
        <p>住所</p>
      </div>
      <div class="col-1"></div>
      <div class="col-7">
        <%= f.text_field :address, autocomplete: "address", class: "w-100"; %>
      </div>
    </div>

    <div class="row">
      <div class="col-4">
        <p>電話番号(ハイフンなし)</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "w-100"; %>
      </div>
    </div>

    <div class="row">
      <div class="col-4">
        <p>メールアドレス</p>
      </div>
      <div class="col-1"></div>
      <div class="col-3">
        <%= f.email_field :email, autocomplete: "email", class: "w-100"; %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-5"></div>
      <div class="col-3 action">
        <%= f.submit "編集内容を保存", class: "btn btn-success"; %>
      </div>
      <div class="col-3">
        <%= link_to "退会する", customer_confirm_unsubscribe_path, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>

</div>
