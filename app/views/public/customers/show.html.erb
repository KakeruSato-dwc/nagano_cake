<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-4 my-3">
      <h2 class="bg-light text-center">マイページ</h2>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2 mb-3">
      <h2>登録情報</h2>
    </div>
    <div class="col-2 mb-3">
      <%= link_to "編集する", edit_customer_information_path, class: "btn btn-success" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-light">氏名</td>
            <td>
              <%= @customer.last_name %>
              <%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <td class="table-light">カナ</td>
            <td>
              <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <td class="table-light">郵便番号</td>
            <td>
              <%= @customer.postal_code %>
            </td>
          </tr>
          <tr>
            <td class="table-light">住所</td>
            <td>
              <%= @customer.address %>
            </td>
          </tr>
          <tr>
            <td class="table-light">電話番号</td>
            <td>
              <%= @customer.telephone_number %>
            </td>
          </tr>
          <tr>
            <td class="table-light">メールアドレス</td>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2">
      <h2>注文履歴</h2>
    </div>
    <div class="col-2">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
    </div>
  </div>
  
</div>
