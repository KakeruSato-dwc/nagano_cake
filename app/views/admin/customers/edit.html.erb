<div class="container">
  <div class="row">
    <div class="col-5">
      <h3 class="bg-light text-center my-4">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
      </h3>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mt-4">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <table class="table table-borderless" style="border-collapse: collapse;">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
              <td></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
              <td></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="2"><%= f.text_field :address, class:"w-100"; %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
              <td></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
              <td></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active_true, "有効" %>
                <%= f.radio_button :is_active, false, class: "ml-4"; %>
                <%= f.label :is_active_false, "退会" %>
              </td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td>
                <%= f.submit "変更を保存", class: "btn btn-success"; %>
              </td>
              <td></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
