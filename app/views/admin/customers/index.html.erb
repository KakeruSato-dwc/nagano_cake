<div class="container">
  <div class="row">
    <div class="col-4">
      <h2 class="bg-light text-center my-4">会員一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-borderless">
        <thead class="table bg-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to(admin_customer_path(customer.id), style: "color: black; text-decoration: underline") do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <% if customer.is_active == true %>
                <td class="text text-success">有効</td>
              <% else %>
                <td class="text text-secondary">退会</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>