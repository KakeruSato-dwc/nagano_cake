<div class="container">
  <div class="row">
    <div class="col-4">
      <h2 class="bg-light text-center my-4">商品詳細</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <%= image_tag @item.image, size: "300x200" %>
    </div>
    <div class="col-8 ml-auto">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>
              税込価格</br>
              (税抜価格)
            </th>
            <th><%= (@item.price * 110 / 100).to_s(:delimited) %> (<%= (@item.price).to_s(:delimited) %>) 円</th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-10 mx-auto text-center">
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success"; %>
    </div>
  </div>
</div>
